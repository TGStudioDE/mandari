---
const { title = 'Konopka & Kramin – Moderne Softwarelösungen', description = 'Wir entwickeln innovative Softwarelösungen für die öffentliche Verwaltung. Unser erstes Produkt: Mandari - das moderne Ratsarbeitssystem.' } = Astro.props as { title?: string, description?: string };
const currentPath = Astro.url.pathname;
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'http://localhost:4321';
---
<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#667eea" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={`${siteUrl}/og.png`} />
    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: 'Konopka & Kramin',
      description: 'Moderne Softwarelösungen für die öffentliche Verwaltung',
      url: siteUrl,
      founder: [
        { '@type': 'Person', name: 'Sven Konopka' },
        { '@type': 'Person', name: 'Sten Kramin' }
      ],
      foundingDate: '2024',
      sameAs: []
    })}</script>
  </head>
  <body>
    <a class="skip-link" href="#main">Zum Inhalt springen</a>
    <header class="site">
      <div class="container">
        <div class="header-content">
          <a href="/" class="logo" aria-label="Konopka & Kramin Startseite">
            Konopka & Kramin
          </a>
          <nav class="main-nav" aria-label="Hauptnavigation">
            <a href="/" class={currentPath === '/' ? 'is-active' : ''}>Home</a>
            <a href="/mandari" class={currentPath.startsWith('/mandari') ? 'is-active' : ''}>Mandari</a>
            <a href="/pm-plan" class={currentPath.startsWith('/pm-plan') ? 'is-active' : ''}>PM‑Plan (KI)</a>
            <a href="/team" class={currentPath.startsWith('/team') ? 'is-active' : ''}>Team</a>
            <a href="/faq" class={currentPath.startsWith('/faq') ? 'is-active' : ''}>FAQ</a>
            <a href="/kontakt" class={"btn btn-primary" + (currentPath.startsWith('/kontakt') ? ' is-active' : '')}>Kontakt</a>
          </nav>
          <button class="mobile-menu-toggle" aria-label="Menü öffnen">
            <span></span>
            <span></span>
            <span></span>
          </button>
        </div>
      </div>
    </header>
    <main id="main">
      <slot />
    </main>
    <footer class="site">
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h3>Konopka & Kramin</h3>
            <p>Moderne Softwarelösungen für die digitale Verwaltung</p>
          </div>
          <div class="footer-section">
            <h4>Produkte</h4>
            <ul>
              <li><a href="/mandari">Mandari</a></li>
              <li><a href="/mandari#features">Features</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Unternehmen</h4>
            <ul>
              <li><a href="/team">Team</a></li>
              <li><a href="/faq">FAQ</a></li>
              <li><a href="/kontakt">Kontakt</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Rechtliches</h4>
            <ul>
              <li><a href="/impressum">Impressum</a></li>
              <li><a href="/datenschutz">Datenschutz</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; {new Date().getFullYear()} Konopka & Kramin. Alle Rechte vorbehalten.</p>
        </div>
      </div>
    </footer>
  </body>
  </html>

<style>
  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--primary-color);
    color: #fff;
    padding: .5rem 1rem;
    border-radius: 0 0 .5rem 0;
    transition: var(--transition);
  }

  .skip-link:focus {
    top: 0;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--primary-color);
    text-decoration: none;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .main-nav a {
    color: var(--text-color);
    font-weight: 500;
    transition: var(--transition);
  }

  .main-nav a:hover {
    color: var(--primary-color);
  }

  .main-nav a.is-active {
    color: var(--primary-color);
    position: relative;
  }

  .main-nav a.is-active::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -8px;
    width: 100%;
    height: 2px;
    background: var(--primary-color);
    border-radius: 2px;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: var(--text-color);
    transition: var(--transition);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-section h3,
  .footer-section h4 {
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
  }

  .footer-section li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: var(--text-muted);
    transition: var(--transition);
  }

  .footer-section a:hover {
    color: var(--primary-color);
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .main-nav {
      display: none;
      position: absolute;
      top: 64px;
      left: 0;
      right: 0;
      background: var(--bg-color);
      border-bottom: 1px solid var(--border-color);
      padding: 1rem;
      flex-direction: column;
      gap: 1rem;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>

<script>
  // Mobile menu toggle
  const toggle = document.querySelector('.mobile-menu-toggle');
  const nav = document.querySelector('.main-nav');
  toggle?.addEventListener('click', () => {
    const isOpen = getComputedStyle(nav!).display !== 'none';
    nav!.style.display = isOpen ? 'none' : 'flex';
  });
</script>
